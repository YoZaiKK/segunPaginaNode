<div class="col-md-4 mx-auto">
		{{#each errors}}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<strong>
					{{text}}
				</strong>
				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="alert"
					aria-label="Close"
				></button>
			</div>
		{{/each}}
	<div class="card">
		<div class="card-header">
			<h3>New Note</h3>
		</div>
		<div class="card-body">
			<form action="/notes/new-note" method="POST">
				<div class="mb-3">
					<input
						type="text"
						name="title"
						class="form-control"
						placeholder="Title"
						autofocus
					/>
				</div>
				<div class="mb-3">
					<textarea
						name="description"
						class="form-control"
						placeholder="description"
					></textarea>
				</div>
				<div class="d-grid gap-2">
					<button class="btn btn-primary" type="submit">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>