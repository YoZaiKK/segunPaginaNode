<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body d-grid gap-2">
        <h4 class="card-title d-flex justify-content-between align-items-centter">
          {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{description}}</p>
        <button class="btn btn-danger btn-block btn-sm">Delete</button>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto col-3">
    <div class="card-body d-grid gap-2">
      <p class="lead">No hay notas aun!</p>
      <a href="/notes/add" class="btn btn-outline-success btn-block">Crea una!</a>
    </div>
  </div>
  {{/each}}
</div>